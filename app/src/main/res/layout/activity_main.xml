<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <EditText
            android:paddingLeft="5dp"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:id="@+id/et1"
            android:hint="Enter URL"
            android:background="@drawable/border"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:id="@+id/srch"
            android:background="@drawable/ic_search_black_24dp"/>
    </LinearLayout>
    
    <WebView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:id="@+id/wview"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="10dp"
            android:id="@+id/fb"
            android:background="@drawable/ic_004_facebook_logo_button"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="10dp"
            android:id="@+id/google"
            android:background="@drawable/ic_001_google_plus_logo_button"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="10dp"
            android:id="@+id/you"
            android:background="@drawable/ic_002_youtube_logotype"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:layout_margin="10dp"
            android:id="@+id/html"
            android:background="@drawable/ic_003_internet"/>

    </LinearLayout>


</LinearLayout>